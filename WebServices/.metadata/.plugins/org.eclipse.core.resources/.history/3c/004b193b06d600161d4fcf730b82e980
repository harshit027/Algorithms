package com.mywebservice.calculator;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;

@Path("/simplecalculator")
public class SimpleCalculator 
{
	@GET
	@Produces("application/xml")
	@Path("/{operation}/{a}/{b}")
	public String executeOperation(@PathParam("op") String operation, @PathParam("a") double a, @PathParam("b") double b)
	{
		String response = null;
		if( b==0 )
			throw new ArithmeticException("Denominator = 0");
		
		double result = 0;
		switch(operation)
		{
		case "addition":
			result = a+b;
			break;
		case "subtraction":
			result = a-b;
			break;
		case "division":
			result = a/b;
			break;
		case "multiplication":
			result = a*b;
		}
		response = "<simplecalculator>" +
						"<operation>"+
							"<name>"+operation+"</name>"+
							"<result>"+result +"</result>"+
						"</operation>"+
					"</simplecalculator>";
		return response;
	}
	
}
