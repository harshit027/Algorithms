package others;

public class MaximumVolume {
	public static void main(String args[]){
		int[] a = {3,6,4,2,8,3,5,7,4,3};
		System.out.println(getMaxVolume(a));
	}
	public static int getMaxVolume(int [] a){
		int v=0,i=0,j=a.length-1;
		int left= a[0], right=a[a.length-1];
		while(i<j){
			if(a[i]<a[j]){
				i++;
				if(a[i]>left)
					left=a[i];
				else
					v+=left-a[i];
			}
			else{
				j--;
				if(a[j]>right)
					right=a[j];
				else
					v+=right-a[j];_
			}
		}
	}
}
